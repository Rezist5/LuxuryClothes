generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  products      Product[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Product {
  id          String    @id @default(cuid())
  name        String
  description String
  price       Float
  condition   String
  brand       String
  category    String
  images      String[]
  sellerId    String
  seller      User      @relation(fields: [sellerId], references: [id])
  status      String    @default("available")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}